<div class="container">
  <div class="text-center">
    <div class="goody_header">
      <div class="goody_header_title"><%= @campaign.title %></div>
      <p class="mb-0"><%= @campaign.claim %></p>
    </div>
    <h1 class="mb-5 mt-5"><%= t('.support_the_project') %></h1>
  </div>

  <div class="row">
    <% @goodies.each do |goody| %>
      <div class="col-sm-6 col-md-4">
        <section class="card side_card">
          <div class="card-body">
            <h4 class="card-title"><%= goody.title %></h4>
            <p class="card-text"><%= goody.description %></p>
            <!-- TODO: Show only remaining quantity -->
            <p class="card-text"><%= t(".quantity", quantity: goody.quantity) %></p>
            <hr>
            <div class="d-flex justify-content-between align-items-center">
              <div><%= t(".price") %> <strong> CHF <%= goody.price %></strong></div>
              <div class="text-right">
                <%= link_to t(".pledge"), new_campaign_goody_order_path(@campaign, goody),
                class:"btn btn_faded btn_bottom qa-pledge" %>
              </div>
            </div>
          </div>
        </section>
      </div>
    <% end %>
  </div>
</div>
