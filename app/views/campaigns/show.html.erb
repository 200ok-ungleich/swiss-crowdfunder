<div class="container">
  <h1><%= @campaign.title %></h1>
  <p class="small mt-3 mb-4">
    <strong><%= @campaign.claim %></strong>
  </p>

  <div class="row">
    <div class="col-md-7 col-lg-8">
        <div class="embed-responsive embed-responsive-16by9 mb-5">
        <% unless @campaign.youtube_url.empty? %>
          <iframe class="embed-responsive-item" height="315" src="<%= @campaign.youtube_url %>" width="560"></iframe>
        <% else %>
          <img src="http://placekitten.com/g/560/315"/>
        <% end %>
        </div>
    </div>
    <div class="col-md-5 col-lg-4">
      <div class="progress mb-3">
        <div class="progress-bar bg_theme progress_bar_thin" role="progressbar"
          style="width: <%= number_to_percentage(100*(@campaign.amount_raised.to_f / @campaign.goal), precision: 1) %>;"
          aria-valuenow="<%= @campaign.amount_raised %>" aria-valuemin="0" aria-valuemax="<%= @campaign.goal %>">
        </div>
      </div>

      <div class="text_loud">CHF <%= @campaign.amount_raised %></div>
      <p class="text_loud_sub">
        <%= raw t('.funding_amount_pledged', amount: @campaign.amount_raised, currency: "CHF") %>
      </p>

      <div class="text_loud"><%= Supporter.count %></div>
      <p class="text_loud_sub"><%= t '.backers' %></p>

      <div class="text_loud">100</div>
      <p class="text_loud_sub"><%= t '.days_to_go' %></p>

      <div class="mb-3">
        <%= link_to "Support this project", campaign_goodies_path(@campaign), class: "btn btn_theme btn-lg btn-block" %>
      </div>

