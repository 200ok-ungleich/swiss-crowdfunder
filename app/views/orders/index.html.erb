<div class="container">

  <h2>Verfication</h2>

  <p>
    You have selected the package <b> <%= @goodie.title %> </b>.
  </p>

  <p>
    You hereby acknowledge that you will want to pay <b><%= @goodie.price %>CHF</b> for it.
  </p>

  <%= simple_form_for @order do |f| %>
    <%= f.input :agreement, required: true, :label "I want to support the project" %>
    <%= f.submit %>
  <% end %>

  <input type="checkbox" id="agree" />
  <label for="agree">Agree</label>

</div>
