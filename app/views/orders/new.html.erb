<%= javascript_include_tag( 'orders' ) %>

<div class="container">

  <div class="confirmation">
    <h2>Confirmation</h2>

    <p>
      You have selected the package <b> <%= @goody.title %> </b>.
    </p>

    <p>
      You hereby acknowledge that you will want to pay <b><%= @goody.price %>CHF</b> for it.
    </p>
  </div>

  <%= simple_form_for [@goody.campaign, @goody, @order] do |f| %>
    <div class="form-row">
      <label for="card-element">
        Credit or debit card
      </label>
      <div id="card-element">
        <!-- a Stripe Element will be inserted here. -->
      </div>
      <!-- Used to display form errors -->
      <div id="card-errors" role="alert"></div>
    </div>
    <br/>
    <%= f.input :agreement, required: true, label: "I agree and want to support this project", input_html: { class: "qa-agreement" } %>
    <%= f.submit "Create Order", class: "qa-submit" %>
  <% end %>

</div>
