<div class="site-wrapper">
  <div id="carouselExampleControls" class="carousel slide top_carousel mb-5" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @campaigns.each_with_index do |campaign, index| %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class='<%= active?(index) %>'></li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <% @campaigns.each_with_index do |campaign, index| %>
        <div class="carousel-item <%= active?(index) %>">
          <img class="d-block w-100" src="<%= campaign.image.resized.url %>" alt="First slide">
          <div class="carousel_text">
            <h2><%= campaign.title %></h2>
            <p class="mt-3 mb-5"><%= campaign.claim %></p>
            <%= link_to t('.view_project'), campaign_path(campaign), class: "btn btn_theme no_trans btn_spacey btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="fa fa-angle-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="fa fa-angle-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <main class="container mb-3">
    <% if !@campaigns %>
      <%= t('.no_campaigns') %>
    <% end %>
    <div class="row">
      <% @campaigns.each do |campaign| %>
        <%= render partial: 'shared/campaign_card', locals: {campaign: campaign} %>
      <% end %>
      <!-- Show a "Coming soon" cards to fill up remaining spots -->
      <% (3 - @campaigns.length).times do |i| %>
        <div class="col-md-4" style="padding-bottom: 1.5em;">
          <div class="campaign_card coming_soon">
            <div class="text-muted"><%= t '.coming_soon' %></div>
          </div>
        </div>
      <% end %>
    </div>
  </main>
</div>
